class Solution:
    def isEven(self, n: int) -> bool:
        return n % 2 == 0
        
    def countOdds(self, low: int, high: int) -> int:
        if self.isEven(low):
            if self.isEven(high):
                return (high - low) // 2
            else:
                return (high - low) // 2 + 1
        else:
            return (high - low) // 2 + 1
